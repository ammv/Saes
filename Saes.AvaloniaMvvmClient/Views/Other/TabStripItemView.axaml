<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:Saes.AvaloniaMvvmClient.ViewModels.Other"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:TabStripItemViewModel"
             x:Class="Saes.AvaloniaMvvmClient.Views.Other.TabStripItemView">
	<Design.DataContext>
		<vm:TabStripItemViewModel/>
	</Design.DataContext>
	<Grid ColumnDefinitions="40, *" MinWidth="40" ToolTip.Tip="{Binding Title}"
							  
								HorizontalAlignment="Center">
		<Button Content="X" Background="Transparent"
				FontSize="12"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Command="{Binding CloseCommand}"
				FontWeight="Black"/>
		<TextBlock Text="{Binding Title}"
				   Grid.Column="1"
				   HorizontalAlignment="Left"
				   VerticalAlignment="Center"/>

	</Grid>
</UserControl>

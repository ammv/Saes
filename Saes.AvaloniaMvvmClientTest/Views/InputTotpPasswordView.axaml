<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:Saes.AvaloniaMvvmClientTest.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="450"
			  x:DataType="vm:InputTotpPasswordViewModel"
             x:Class="Saes.AvaloniaMvvmClientTest.Views.InputTotpPasswordView">
	<StackPanel Margin="8">
		<TextBlock Text="2FA-Auth"
				   HorizontalAlignment="Center"
				   FontSize="20"
				   Margin="0 0 0 24"/>

		<TextBlock Text="Одноразовый пароль"
				   FontSize="16"
				   Margin="0 0 0 4"/>
		<TextBox Text="{Binding TotpPassword}"
				 Margin="0 0 0 16"/>
		<Button Content="Готово" Command="{Binding SuccessCommand}"/>
	</StackPanel>

</UserControl>
